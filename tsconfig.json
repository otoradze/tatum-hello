{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["shared/utils/*"],
      "@ui/*": ["shared/ui/*"],
      "@assets/*": ["shared/assets/*"],
      "@features/*": ["features/*"],
      "@pages/*": ["pages/*"]
    }
  },
  "include": ["node_modules/vite/client.d.ts", "**/*"]
}
